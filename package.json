{
  "name": "portfolio",
  "description": "",
  "license": "MIT",
  "author": "Stefan Petrovic",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "parcel build src/index.html --public-url .",
    "precommit": "lint-staged",
    "dev": "parcel src/index.html --open",
    "e2e": "testcafe chrome ./test/index.e2e.js",
    "lint": "eslint .",
    "publish-gh-pages": "push-dir --dir=dist --branch=gh-pages --allow-unclean",
    "start": "yarn dev",
    "test": "yarn build && yarn e2e"
  },
  "devDependencies": {
    "@amilajack/push-dir": "^0.4.4",
    "babel-core": "^6.26.3",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-flow-runtime": "^0.17.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "browser-sync": "^2.24.7",
    "cssnano": "^4.1.0",
    "del": "^3.0.0",
    "eslint": "^5.5.0",
    "eslint-config-bliss": "^2.3.0",
    "flow-runtime": "^0.17.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.2",
    "prettier-package-json": "^2.0.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-hot-loader": "^4.3.6",
    "run-sequence": "^2.2.1",
    "testcafe": "^0.22.0"
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "eslint --fix",
        "prettier --ignore-path .eslintignore --write",
        "git add"
      ],
      "*.json|.{babelrc,eslintrc,prettierrc,stylelintrc}": [
        "prettier --ignore-path .eslintignore --parser json --write",
        "git add"
      ],
      "*.{css,scss}": [
        "prettier --ignore-path .eslintignore --write",
        "git add"
      ],
      "*.{yml,less,md}": [
        "prettier --ignore-path .eslintignore --write",
        "git add"
      ],
      "package.json": [
        "prettier-package-json --write",
        "git add"
      ]
    },
    "globOptions": {
      "dot": true
    }
  }
}
